/*我的 menu start  */
.menu{
    width: 100%;
    height: 100rpx;
    padding: 30rpx 0; 
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 20rpx solid #efefef;
}
.menu .l,.menu .r{
    text-align: center;
    flex: 1;
}
.menu .l text,.menu .r text{
   padding-top: -10rpx;
}
/*我的 menu end  */

/*收支明细 start  */
.details-list{
    width: 100%;
    height:auto;
    display:flex;
    flex-direction: column;
}
.details-list .title{
    flex: 1;
    padding:20rpx  40rpx;
    border-bottom: 2px solid #ecebeb;
}
.details-list .listView{
    width: 100%;
    height: 100%;
    flex: 1;
}
.details-list .listView .item{
    width: calc(100% - 80rpx);
    display: flex;
    height: 120rpx;
    border-bottom:  2px solid #ecebeb;
    padding:0  40rpx;
    align-items: center;
}
.details-list .listView .l{
   flex: 1;
    text-align: left;
}
.details-list .listView .r{
   flex: 1;
    text-align: right;
}
/*收支明细 end  */