/*我的 menu start  */
.menu{
    width: 100%;
    background: #ffffff;
    border-bottom: 20rpx solid #efefef;
    padding: 10rpx 0;
}
.menu .wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
}
.menu .l,.menu .r{
    text-align: center;
     flex: 1; 
}
.menu .l text,.menu .r text{
   padding-top: -10rpx;
}
/*我的 menu end  */

/*收支明细 start  */
.details-list{
    width: 100%;
    height:auto;
}
.details-list .wrapper{
  display:flex; 
   flex-direction: column;
}
.details-list .title{
    width: 100%;
    padding:10rpx  40rpx;
    border-bottom: 2px solid #ecebeb;
}
.details-list .listView{
    width: 100%;
    height: 100%;
    flex: 1;
}
.details-list .listView .item{
    width: calc(100% - 80rpx);
    display: flex;
    height: 110rpx;
    border-bottom:  2px solid #ecebeb;
    padding:0  40rpx;
    align-items: center;
}
.details-list .listView .l{
   flex: 1;
    text-align: left;
}
.details-list .listView .r{
   flex: 1;
    text-align: right;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
/*收支明细 end  */