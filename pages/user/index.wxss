    padding: 50rpx 30rpx;
}
.category-wrapper .title{
    width: 100%;
    text-align: center;
    margin-bottom: 40rpx;
}
.category-wrapper  .item-wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}
.category-wrapper  .item-wrapper .item{
    width: 150rpx;
    height: 210rpx;
    margin: 10rpx 20rpx;
