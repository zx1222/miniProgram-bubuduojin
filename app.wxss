page{
  width:100%;
  height:100%;
  /* font-family: PingFangSC-Regular, sans-serif; */
  color: #3d3d3d;

}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.container::-webkit-scrollbar{
  display: none
}
.img-responsive{
  width: 100%;
}
.center-block{
  display: block;
}
/*字体大小*/
.text-l1{
  font-size: 102rpx;
}
.text-l2{
  font-size: 46rpx;
}
.text-m1{
  font-size: 38rpx;
}
.text-m2{
  font-size: 34rpx;
}
.text-s1{
  font-size: 30rpx;
}
.text-s2{
  font-size: 28rpx;
}
.text-ss{
  font-size: 24rpx;
}
.text-white{
  color: #fefefe;
}
.text-red{
  color: #e43738;
}
.text-lightRed{
  color: #f64149;
}
.text-yellow{
        color: #faed1a;
}
.text-grey{
    color: #717070;
}
.text-blod{
    font-weight: 600;
}
.text-regular{
    font-weight: 500;
}

/*字体大小结束 */

/*动画 start  */
@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.fadeIn {
  animation: fadeIn .4s linear 1;
}

@keyframes fadeOut {
  from {
    opacity:1;
  }

  to {
    opacity: 0;
  }
}

.fadeOut {
  animation: fadeOut .4s linear 1;
}

/*动画 end  */
